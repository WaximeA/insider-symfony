{% extends 'base.html.twig' %}

{% block title %}Proposal{% endblock %}

{% block body %}
    <h1>Proposal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proposal.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ proposal.type }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ proposal.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ proposal.description }}</td>
            </tr>
            <tr>
                <th>Created by</th>
                <td>{{ proposal.createdBy }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ proposal.createdAt | date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated by</th>
                <td>{{ proposal.updatedBy }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ proposal.updatedAt | date('d/m/Y H:i:s')  }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ proposal.published  }}</td>
            </tr>
