{% extends 'base.html.twig' %}

{% block title %}Commentary index{% endblock %}

{% block body %}
    <h1>Commentary index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Parent_id</th>
                <th>Created by</th>
                <th>Created at</th>
                <th>Updated by</th>
                <th>Updated at</th>
                <th>Published</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentary in commentaries %}
            <tr>
                <td>{{ commentary.id }}</td>
                <td>{{ commentary.content }}</td>
                <td>{{ commentary.parentId }}</td>
                <td>{{ commentary.createdBy }}</td>
                <td>{{ commentary.createdAt | date('d/m/Y H:i:s') }}</td>
                <td>{{ commentary.updatedBy }}</td>
                <td>{{ commentary.updatedAt | date('d/m/Y H:i:s') }}</td>
                <td>{{ commentary.published }}</td>
                <td>
                    <a href="{{ path('commentary_show', {'id': commentary.id}) }}">show</a>
                    <a href="{{ path('commentary_edit', {'id': commentary.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentary_new') }}">Create new</a>
{% endblock %}
